<html>
  <h1>books</h1>
  <table>
    <thead>
      <tr>
        <th>title</th>
        <th>body</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td><%= link_to "show",book_path(book.id) %></td>
          <td><%= link_to "edit",book_path(book.id) %></td>
          <td><%= link_to "destroy",book_path(book.id), method: :delete,"data-confirm" => "Are you sure?" %></td>
        </tr>
        <% end %>
    </tbody>
  </table>

  <h3>New Books</h3>

<%= form_with model: @book, url:'books', method: :post do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :boby %>

  <%= f.submit'Create Book' %>
<% end %>
</html>